{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="dashboard">

    {% include "layout/navbar.html.twig" %}

    <div class="dashboard-body">
        <h1>Article index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th class="small-col">Description</th>
                    <th>image</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.name }}</td>
                    <td>{{ article.price }}</td>
                    <td class="small-col-content">{{ article.description }}</td>
                    <td>
                        <img src="{{ asset('uploads/article-image/' ~ article.image )}}" alt="IMG">
                    </td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        <a href="{{ path('app_article_new') }}">Create new</a>
    </div>

</div>
    
{% endblock %}
